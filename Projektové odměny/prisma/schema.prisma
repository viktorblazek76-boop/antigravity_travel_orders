// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  role          String   // ID, PM, PRD, MLZ, EMP
  managerId     String?
  manager       User?    @relation("ManagerToEmployee", fields: [managerId], references: [id])
  employees     User[]   @relation("ManagerToEmployee")
  
  pmProjects    Project[] @relation("PMProjects")
  prdProjects   Project[] @relation("PRDProjects")
  rewards       Reward[]
}

model Project {
  id            String   @id @default(cuid())
  name          String
  customer      String
  pmId          String
  pm            User     @relation("PMProjects", fields: [pmId], references: [id])
  prdId         String
  prd           User     @relation("PRDProjects", fields: [prdId], references: [id])
  
  teamBudget      Float    @default(0)
  proposedBudget  Float    @default(0)
  projectValue    Float    @default(0)
  budgetStatus    String   @default("APPROVED") // PROPOSED, APPROVED
  
  phases        Phase[]
  rewards       Reward[]
}

model Phase {
  id            String   @id @default(cuid())
  projectId     String
  project       Project  @relation(fields: [projectId], references: [id])
  name          String
  order         Int
  dueDate       DateTime?
  isPaid        Boolean  @default(false)
  paidAt        DateTime?
  status        String   @default("OPEN") // OPEN, PROPOSED, APPROVED, PAID
  
  rewards       Reward[]
}

model Reward {
  id            String   @id @default(cuid())
  projectId     String
  project       Project  @relation(fields: [projectId], references: [id])
  userId        String?  // nullable pro týmové čerpání
  user          User?    @relation(fields: [userId], references: [id])
  phaseId       String
  phase         Phase    @relation(fields: [phaseId], references: [id])
  
  amount        Float
  roleInProject String?  // např. Konzultant, Architekt
  status        String   @default("PROPOSED") // PROPOSED, APPROVED, PAID
  note          String?  // poznámka k čerpání
  isTeamReward  Boolean  @default(false)
  
  @@unique([userId, phaseId])
}
